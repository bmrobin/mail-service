{
  "name": "mail-subscriber",
  "version": "0.0.0",
  "description": "Description for mail-subscriber",
  "appPath": "src/",
  "private": true,
  "scripts": {
    "start": "tsc && node src/dist/express",
    "test": "tsc && jest --coverage"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/body-parser": "1.16.3",
    "@types/express": "4.0.35",
    "@types/jest": "^19.2.3",
    "@types/jquery": "^2.0.40",
    "@types/lokijs": "^1.2.30",
    "@types/node": "^7.0.5",
    "@types/nodemailer": "~1.3.32",
    "body-parser": "1.17.1",
    "express": "4.15.2",
    "jest": "^20.0.1",
    "jshint-stylish": "^2.1.0",
    "load-grunt-tasks": "^3.4.1",
    "lokijs": "^1.4.3",
    "nodemailer": "4.0.1",
    "source-map-loader": "^0.1.6",
    "tslint": "^4.4.2",
    "ts-jest": "^20.0.3",
    "ts-loader": "^2.0.1",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/models/**",
      "src/app/services/**",
      "!src/dist/**"
    ],
    "mapCoverage": true,
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "engines": {
    "node": "^4.3"
  }
}
